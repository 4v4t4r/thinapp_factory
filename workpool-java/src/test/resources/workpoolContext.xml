<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xmlns:mvc="http://www.springframework.org/schema/mvc"
   xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
<!--    <context:property-placeholder location="classpath:manifest.properties" -->
<!--       system-properties-mode="NEVER" /> -->

   <bean class="com.vmware.thinapp.workpool.WorkpoolStub" />
   <bean class="java.util.concurrent.Executors" factory-method="newCachedThreadPool" />

   <bean class="com.vmware.thinapp.workpool.CloseableServiceInstance"
      destroy-method="close">
<!--       Comes from manualmode.properties. -->
      <constructor-arg index="0" value="https://vc.your.company.com/sdk" />
      <constructor-arg index="1" value="vc-user" />
      <constructor-arg index="2" value="vc-password" />
      <constructor-arg index="3" value="true"/>
   </bean>

   <context:component-scan base-package="com.vmware.thinapp.vi" />
   <context:component-scan base-package="com.vmware.thinapp.workpool" />
</beans>
